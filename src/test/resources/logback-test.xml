<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
			</pattern>
		</encoder>
	</appender>

    <logger name="jp.co.ctc_g.springbatch_sample" level="debug" />

	<root level="error">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>